</header>
<script>

	const checkuser = document.getElementById('checkuser').innerHTML;
	if (checkuser == 'true') {
		document.getElementById('Login').style.display = "none";
	} else {
		document.getElementById('Logout').style.display = "none";
		document.getElementById('Cartlogo').style.display = "none";
	}

</script>
