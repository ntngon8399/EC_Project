{{>AdminMenuBar}}
<div class="row">
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-chart-area mr-1"></i>SUBSCRIBERS PER MONTH </div>
            <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
        </div>

    </div>

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>CUSTOMERS MANAGE</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>StudentID</th>
                            <th>Picture</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Joining date</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>StudentID</th>
                            <th>Picture</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Joining date</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each AllStu}}
                        <tr>
                            <th>{{this.student_id}}</th>
                            <th><img src="{{this.student_picture_link}}" alt=""></th>
                            <th>{{this.fname}}</th>
                            <th>{{this.lname}}</th>
                            <th>{{this.email}}</th>
                            <th>{{this.phoneNo}}</th>
                            <th>{{this.joining_date}}</th>

                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</main>
<footer class="py-4 bg-light mt-auto">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
            <div class="text-muted">Copyright &copy; EDUCATURE 2020</div>
            <div>
                <a href="#">Privacy Policy</a>
                &middot;
                <a href="#">Terms &amp; Conditions</a>
            </div>
        </div>
    </div>
</footer>
</div>
</div>

